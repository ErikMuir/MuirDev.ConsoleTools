<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>12.0</LangVersion>
    <Authors>erikdmuir</Authors>
    <Company>MuirDev</Company>
    <Product>ConsoleTools</Product>
    <Description>A .NET Standard class library for console apps to help customize output and facilitate user interaction in a fluent manner.</Description>
    <Copyright>Copyright Â© 2024</Copyright>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/ErikMuir/MuirDev.ConsoleTools</RepositoryUrl>
    <PackageId>MuirDev.ConsoleTools</PackageId>
    <PackageIcon>icon.jpeg</PackageIcon>
    <PackageLicenseExpression>BSD-3-Clause</PackageLicenseExpression>
    <PackageTags>console dotnet logging confirm menu fluent</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.3.0</Version>
    <PackageReleaseNotes>Add a ProgressBar tool for displaying progress of potentially long-running, multi-step processes.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="icon.jpeg" Pack="true" Visible="false" PackagePath="\" />
  </ItemGroup>

</Project>
